  <script type="text/javascript">

function validateForm() {
	  //javascript validation
	  
	  var emailInput= document.getElementsByName('validationEmail').value;
	  var userIDInput= document.getElementsByName('validationEmployeeID').value;
	  var reasonInput= document.getElementsByName('validationreason').value;
	  
	  if (emailInput === '' ||userIDInput === '' || reasonInput === '')
	  {
		  alert ('These fields are required');
	  return false;
	  
	}
	
}
</script>
  
